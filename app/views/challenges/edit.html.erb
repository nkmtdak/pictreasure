<h1>Edit Challenge</h1>

<%= form_with(model: @challenge, local: true) do |form| %>
  <% if @challenge.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@challenge.errors.count, "error") %> prohibited this challenge from being saved:</h2>
      <ul>
        <% @challenge.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :説明 %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image, class: 'form-control-file' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Update Challenge', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to '詳細', @challenge %> |
